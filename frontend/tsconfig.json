
{
  "compileOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/out-tsc",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "es6"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@env": ["src/environments/environment"],
      "@models": ["src/models"],
      "@services": ["src/services"],
      "@components": ["src/components"],
      "@types": ["src/types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
      